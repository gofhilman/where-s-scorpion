generator client {
  provider        = "prisma-client"
  previewFeatures = ["typedSql"]
  output          = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Board {
  id         String      @id @default(uuid())
  name       String      @unique
  image      String
  characters Character[]
  histories  History[]
  tasks      Task[]
  progresses Progress[]
}

model Character {
  id         String     @id @default(uuid())
  board      Board      @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId    String
  name       String     @unique
  location   Json
  image      String
  histories  History[]
  tasks      Task[]
  progresses Progress[]
}

model History {
  id         String      @id
  playerName String?
  startedAt  DateTime    @default(now())
  finishedAt DateTime?
  duration   Int?
  board      Board       @relation(fields: [boardId], references: [id])
  boardId    String
  characters Character[]
  tasks      Task[]
  progress   Progress[]
}

model Task {
  id          String    @id @default(uuid())
  history     History   @relation(fields: [historyId], references: [id], onDelete: Cascade)
  historyId   String
  board       Board     @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId     String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  characterId String
}

model Progress {
  id          String    @id @default(uuid())
  history     History   @relation(fields: [historyId], references: [id], onDelete: Cascade)
  historyId   String
  board       Board     @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId     String
  position    Float
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  characterId String
}
